
<div class="container" style="display: flex;  align-items: center;  justify-content: center;">
<div class="panel panel-default" style="position: absolute; top: 35%; padding: 20px; box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.2), 0 4px 4px 0 rgba(0, 0, 0, 0.19);">

<div class="panel-body" style="padding: 20px; font-size: 80%; color: #333; min-width: 300px;" > 
<h2 style="color: #333; font-size: 200%; text-align: center;">Admin Login</h2>

<br>
              <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
                  <%= f.email_field :email, hide_label: true, placeholder: "Email"%><br>
                  <%= f.password_field :password, hide_label: true, placeholder: "Password" %><br>
                  <%= f.check_box :remember_me %>
                  <div class="text-center p-t-0">
                  <br>
                  <%= f.submit "Log In", :class=> "text-center btn btn-outline" %>
                  </div>
              <% end %>

                  <div class="text-center p-t-15">
                    <small style="text-align: center;"><%= render "devise/shared/links" %></small>
                  </div>

</div>
</div>
</div>
      






<style>

  .loginDiv{
    margin: auto;
    margin-top: 20vh;
    max-width: 300px;
    border-radius: 5px;
    border: 1px solid #ddd;
    background-color: #fff;
    box-shadow: 0 0 2px rgba(0,0,0,0.2);
    -moz-box-shadow: 0 0 2px rgba(0,0,0,0.2);
    -webkit-box-shadow: 0 2 6px rgba(0,0,0,0.2);
    -o-box-shadow: 0 0 2px rgba(0,0,0,0.2);  
    padding-top: 25px;
    padding-bottom: 25px;    
  }

  .form-check{
    padding-left: 20px;
  }

</style>