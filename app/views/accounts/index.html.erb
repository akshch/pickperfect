<div class="container-fluid" style="background: none; padding-top: 25px; padding-bottom: 45px;">
  <div class="panel panel-default container" style="margin: auto; padding: 0px;">
    <div id="exTab3" class="container-fluid">
      <div class="tab-content clearfix" style="margin-top: -1px;">
        <div class="container-fluid tab-pane active">
          <div class="panel-group" id="accordion">
            <div class="panel-heading">
              <br>
              <p class="h4 text-center">Transaction</p>
              <hr>
            </div>
            <br>
            <div class="table-responsive" id="tableDiv">
              <table id="matchList" class="table table-hover dt[-head|-body]-right">
                <thead>
                  <tr>
                    <th class="text-center">User</th>
                    <th class="text-center">Amount</th>
                    <th class="text-center">Response</th>
                    <th class="text-center">transaction</th>
                     <th class="text-center"></th>
                    <th class="text-center"></th>
                    <!--<th class="text-center"></th>-->
                  </tr>
                </thead>
                <tbody>
                  <% @accounts.each_with_index do |account, index| %>
                    <tr>
                      <td class="text-center" style="width: 30px;"><%= User.find(account.user_id).first_name %></td>
                     <td class="text-center"><%= account.amount %></td>
                     <td class="text-center"><%= account.response_id %></td>
                     <td class="text-center"><%= account.transcation %></td>
                     <td class="text-center"><%=%></td>
                      <td><%=link_to edit_account_path(account) do %>
                          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                          <% end %>
                      </td>
                      <!--<td><%=link_to account_path(account), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fa fa-trash-o" aria-hidden="true"></i>
                          <% end %>
                      </td>-->
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <br><br>
            <p class="btn btn-outline-secondary pull-right" style="margin-right: 10px;">
              <a data-toggle="collapse" href='#add-passport'>
              New Transaction?
              </a>
            </p>
              <br><br>
            <div id="add-passport" class="panel-collapse collapse in">
            <br>
            <br>
            <br>
            
                <p class="h6 text-center">Add New Transaction</p><hr>
                  <%= form_for @account do |f| %>

                    <div class="row background-none">
                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
                          <%= f.label :User %>
	                        <%= f.text_field :user_id, class: 'form-control', :required => true %>
                        </small>
                      </div>

                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
                          <%= f.label :Amount %>
                          <%= f.number_field :amount, class: 'form-control'%>
                        </small>
                      </div>
                    </div>

                    <div class="row background-none">
                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
                          <%= f.label :Response %>
                          <%= f.text_field :response_id, class: 'form-control' %>
                        </small>
                      </div>

                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
                          <%= f.label :Transaction %>
                          <%= f.date_field :transcation, class: 'form-control' %>
                        </small>
                      </div>
                    </div>

                    <br>
                    <%= f.submit 'Submit', class: "pull-right btn btn-outline-secondary", style: "font-size:90%; color: #3b0054;" %>
                    <br><br>
                  <% end %>
                  
            </div>

        
    </div>
