<div class="container-fluid" style="background: none; padding-top: 25px; padding-bottom: 45px;">
  <div class="panel panel-default container" style="margin: auto; padding: 0px;">
    <div id="exTab3" class="container-fluid">
      <div class="tab-content clearfix" style="margin-top: -1px;">
        <div class="container-fluid tab-pane active">
          <div class="panel-group" id="accordion">
            <div class="panel-heading">
              <br>
              <p class="h4 text-center"><%= @game.name %></p>
              <hr>
            </div>
            <br>
            <div class="table-responsive" id="tableDiv">
              <table id="matchList" class="table table-hover dt[-head|-body]-right">
                <thead>
                  <tr>
                    <th class="">Questions</th>
                    <th class="text-center">Answer</th>
                    <th class="text-center"></th>
                     <th class="text-center"></th>
                    <th class="text-center"></th>
                  </tr>
                </thead>
                <tbody>
                  <% @game.questions.each_with_index do |question, index| %>
                    <tr>
                      <td class="" style="width: 700px;"><%= question.question %><br><br>
                      <% question.answers.each do |answer| %>
                      <% if answer.answer.present? %>
                      <ul><li style= "text-align:left"><%= answer.answer %></li></ul>
                      <%end%>
                      <%end%></td>
                     
                      <td class="text-center">
                      <% if question.answers.where(:is_correct => true).first != nil %>
                      <%= question.answers.where(:is_correct => true).first.answer  %>
                      <% end %>
                      </td>
                      <td class="text-center"><%= %></td>
                      <td><%=link_to edit_question_path(question) do %>
                          <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
                          <% end %>
                      </td>
                      <td><%=link_to question_path(question), method: :delete, data: { confirm: 'Are you sure?' } do %>
                          <i class="fa fa-trash-o" aria-hidden="true"></i>
                          <% end %>
                      </td>
                    </tr>
                  <% end %>
                </tbody>
              </table>
            </div>
          </div>
          <br><br>
            <p class="btn btn-outline-secondary pull-right" style="margin-right: 10px;">
              <a data-toggle="collapse" href='#add-passport'>
              New Question?
              </a>
            </p>
              <br><br>
            <div id="add-passport" class="panel-collapse collapse in">
            <br>
            <br>
            <br>
            
               <p class="h6 text-center">Add Question</p><hr>
                  <%= form_for @question,  :remote => true do |f| %>

                    <div class="row background-none">
                      <div class="col-12 col-xs-12 col-sm-12">
                        <small>
                            <%= f.label :Question %>
	                        <%= f.text_field :question, label: "Question", class: 'form-control', :remote => true %>
                        </small>
                      </div>
                      </div>

                    <div class="row background-none">
                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
	                        <label>Choice 1</label>
                          <input class="form-control"  name="choice1" required="false" size="30" type="text" />
                        </small>
                      </div>
                      
                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
	                        <label>Choice 2</label>
                          <input class="form-control" name="choice2" required="false" size="30" type="text" />
                        </small>
                      </div>
                      </div>

                      <div class="row background-none">
                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
	                        <label>Choice 3</label>
                          <input class="form-control"  name="choice3" size="30" type="text" />
                        </small>
                      </div>
                      
                      <div class="col-12 col-xs-12 col-sm-6">
                        <small>
	                        <label>Choice 4</label>
                          <input class="form-control" name="choice4"  size="30" type="text" />
                        </small>
                      </div></div>
                        <br>
                       <div class="form-group">
                        <label for="sel1">Select Correct Choice:</label>
                        <select class="form-control" id="sel1" name="correct_choice" >
                          <option>select choice</option>
                          <option>1</option>
                          <option>2</option>
                          <option>3</option>
                          <option>4</option>
                        </select>
                        </div>
                        
                      
                      <%= f.hidden_field :game_id, value: @game.id %>
                       <br>
                    <%= f.submit 'Submit', class: "pull-right btn btn-outline-secondary", style: "font-size:90%; color: #3b0054;" %>
                    <br><br>

                  <% end %>
            </div>

        
    </div>
  </div>
</div>


</div>
